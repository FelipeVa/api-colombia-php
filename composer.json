{
    "name": "felipeva/api-colombia-php",
    "description": "The Api Colombia PHP Client.",
    "keywords": ["php", "api-colombia", "client", "api-colombia-php", "colombia-php-client"],
    "license": "MIT",
    "authors": [
        {
            "name": "Felipe Valencia",
            "email": "pipeedev@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2.0",
        "sammyjo20/saloon": "^2.0"
    },
    "require-dev": {
        "laravel/pint": "^1.8",
        "pestphp/pest": "^2.5.0",
        "phpstan/phpstan": "^1.10.13",
        "rector/rector": "^0.15.24",
        "symfony/var-dumper": "^6.2.8",
        "mockery/mockery": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "FelipeVa\\ApiColombia\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "refacto": "rector",
        "lint": "pint -v",
        "test:lint": "pint --test -v",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:refacto",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
